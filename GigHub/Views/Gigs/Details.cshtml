@model GigHub.Models.GigDetailsViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Details";
}

<h2>
    @Model.Gig.Artist.Name
    @if (User.Identity.IsAuthenticated)
    {
        if (Model.IsFollowing)
        {
            <button class="btn btn-info">Following</button>
        }
        else
        {
            <button class="btn btn-default">Follow</button>
        }
    }
</h2>
<p>Perfotming at @Model.Gig.Venue on @Model.Gig.DateTime.ToString("d MMM") at @Model.Gig.DateTime.ToString("HH:mm")</p>

@if (Model.IsAttending)
{
    <p>You are going to this event</p>
}